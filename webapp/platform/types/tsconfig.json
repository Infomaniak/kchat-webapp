{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "declaration": true,
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "outDir": "./lib",
        "rootDir": "./src",
        "baseUrl": ".",
        "composite": true,
        "typeRoots": ["../../channels/node_modules/@types"],
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "**/*.test.*"
    ]
}

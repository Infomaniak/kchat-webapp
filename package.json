{
  "name": "kchat",
  "private": true,
  "scripts": {
    "build:webapp": "yarn workspace mattermost-webapp build",
    "dev-server:webapp": "yarn workspace mattermost-webapp dev-server",
    "test:types": "yarn workspace mattermost-webapp check-types",
    "test:webapp": "yarn workspace mattermost-webapp test-ci",
    "test:e2e:cypress": "yarn workspace e2e-cypress test",
    "test:e2e:playwright": "yarn workspace e2e-playwright test",
    "clean:all": "yarn workspaces foreach --all run clean && rm -rf node_modules",
    "build:dependencies": "yarn && yarn workspace @infomaniak/mattermost-types build && yarn workspace @infomaniak/mattermost-client build && yarn workspace @mattermost/components build",
    "build:full": "yarn clean:all && yarn build:dependencies && yarn dev-server:webapp"
  },
  "resolutions": {
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2"
  },
  "workspaces": {
    "packages": [
      "e2e-tests/cypress",
      "e2e-tests/playwright",
      "webapp/channels",
      "webapp/platform/client",
      "webapp/platform/components",
      "webapp/platform/eslint-plugin",
      "webapp/platform/mattermost-redux",
      "webapp/platform/types"
    ]
  },
  "packageManager": "yarn@4.0.1",
  "dependencies": {
    "process": "^0.11.10"
  }
}

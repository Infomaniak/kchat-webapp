{
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@e2e-support/*": ["support/*"],
            "@e2e-test.config": ["test.config.ts"],
            "@e2e-types": ["types.ts"],
            "@mattermost/client/*": ["../../webapp/platform/client/src/*"],
            "@mattermost/types/*": ["../../webapp/platform/types/src/*"],
        },
    },
    "include": ["./**/*"],
    "exclude": ["playwright-report"]
}

{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "baseUrl": ".",
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "dist",
    "e2e",
    "node_modules",
    "coverage",
    "packages/components",
    "packages/**/dist/**",
    "packages/**/lib/**",
  ],
}
